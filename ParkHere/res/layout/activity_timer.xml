<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".TimerActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="768px"
        android:layout_height="200px"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/baneer" />
    
    <TextView
        android:id="@+id/textOfTimer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="200px"
        android:layout_height="60px"
        android:layout_marginTop="100px"
        android:layout_marginLeft="260px" 
        android:textSize="11pt"/>
    
    
    <fragment
	 android:id="@+id/mapTimer"
	 android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_width="768px"
     android:layout_height="840px"
     android:layout_marginTop="200px"
     android:layout_marginLeft="0dp"
	 class="com.google.android.gms.maps.MapFragment"/>
    
      <ImageView
        android:id="@+id/payForTheSpot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="543px"
        android:layout_height="117px"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="113px"
        android:src="@drawable/payforthespot" />
    
</RelativeLayout>